<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nurse Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/nurse.css">
</head>
<body>

<!-- Sidebar for Nurse -->
<div class="sidebar">
    <h2>Nurse Dashboard</h2>
    <ul>
        <li><a href="#patient-list"><i class="fa fa-users"></i> Patient List</a></li>
        <li><a href="#daily-tasks"><i class="fa fa-tasks"></i> Daily Tasks</a></li>
        <li><a href="#patient-info"><i class="fa fa-info-circle"></i> Patient Info</a></li>
        <li><a href="#health-monitoring"><i class="fa fa-heartbeat"></i> Health Monitoring</a></li>
    </ul>
</div>

<!-- Main Content -->
<main class="main-content">
    <!-- Patient List -->
    <div id="patient-list" class="patient-list">
        <h2>Assigned Patients</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Condition</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Mary Johnson</td>
                    <td>Heart Attack</td>
                    <td><button class="btn btn-info"><i class="fa fa-eye"></i> View</button></td>
                </tr>
                <tr>
                    <td>James Brown</td>
                    <td>Severe Bleeding</td>
                    <td><button class="btn btn-info"><i class="fa fa-eye"></i> View</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Daily Tasks -->
    <div id="daily-tasks" class="daily-tasks" style="display: none;">
        <h2>Today's Tasks</h2>
        <ul>
            <li><i class="fa fa-check-circle"></i> Monitor Mary Johnson's vital signs</li>
            <li><i class="fa fa-check-circle"></i> Assist in the surgery for James Brown</li>
            <li><i class="fa fa-check-circle"></i> Administer medication to patients</li>
        </ul>
    </div>

    <!-- Patient Info -->
    <div id="patient-info" class="patient-info" style="display: none;">
        <h2>Patient Information</h2>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Mary Johnson</h5>
                <p><strong>Age:</strong> 45</p>
                <p><strong>Condition:</strong> Heart Attack</p>
                <p><strong>Address:</strong> 123 Main St, City</p>
                <button class="btn btn-primary">Update Info</button>
            </div>
        </div>
    </div>

    <!-- Health Monitoring -->
    <div id="health-monitoring" class="health-monitoring" style="display: none;">
        <h2>Health Monitoring</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Heart Rate</th>
                    <th>Blood Pressure</th>
                    <th>Temperature</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Mary Johnson</td>
                    <td>75 bpm</td>
                    <td>120/80 mmHg</td>
                    <td>36.5°C</td>
                    <td><button class="btn btn-warning"><i class="fa fa-edit"></i> Update</button></td>
                </tr>
                <tr>
                    <td>James Brown</td>
                    <td>90 bpm</td>
                    <td>110/70 mmHg</td>
                    <td>37.2°C</td>
                    <td><button class="btn btn-warning"><i class="fa fa-edit"></i> Update</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="/javascripts/nurse.js"></script>
</body>
</html>
